{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@worksheets/apps/framework": ["libs/apps/framework/src/index.ts"],
      "@worksheets/apps/http": ["libs/apps/http/src/index.ts"],
      "@worksheets/apps/json": ["libs/apps/json/src/index.ts"],
      "@worksheets/apps/library": ["libs/apps/library/src/index.ts"],
      "@worksheets/apps/math": ["libs/apps/math/src/index.ts"],
      "@worksheets/apps/sys": ["libs/apps/sys/src/index.ts"],
      "@worksheets/engine": ["libs/engine/src/index.ts"],
      "@worksheets/feat-oauth2/server": ["libs/feat-oauth2/src/server.ts"],
      "@worksheets/feat-user-auth/server": [
        "libs/feat-user-auth/src/server.ts"
      ],
      "@worksheets/feat//execution-history": [
        "libs/feat/execution-history/src/index.ts"
      ],
      "@worksheets/feat//execution-history/server": [
        "libs/feat/execution-history/src/server.ts"
      ],
      "@worksheets/feat/oauth2": ["libs/feat/oauth2/src/index.ts"],
      "@worksheets/feat/user-auth": ["libs/feat/user-auth/src/index.ts"],
      "@worksheets/firebase/client": ["libs/firebase/client/src/index.ts"],
      "@worksheets/firebase/firestore": [
        "libs/firebase/firestore/src/index.ts"
      ],
      "@worksheets/firebase/pubsub": ["libs/firebase/pubsub/src/index.ts"],
      "@worksheets/firebase/server": ["libs/firebase/server/src/index.ts"],
      "@worksheets/templates": ["libs/templates/src/index.ts"],
      "@worksheets/ui/common": ["libs/ui/common/src/index.ts"],
      "@worksheets/util/data-structures": [
        "libs/util/data-structures/src/index.ts"
      ],
      "@worksheets/util/errors": ["libs/util/errors/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
