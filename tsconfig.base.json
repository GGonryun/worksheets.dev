{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@worksheets/apps/framework": ["libs/apps/framework/src/index.ts"],
      "@worksheets/apps/google/calendar": [
        "libs/apps/google/calendar/src/index.ts"
      ],
      "@worksheets/apps/google/drive": ["libs/apps/google/drive/src/index.ts"],
      "@worksheets/apps/google/gmail": ["libs/apps/google/gmail/src/index.ts"],
      "@worksheets/apps/http": ["libs/apps/http/src/index.ts"],
      "@worksheets/apps/math": ["libs/apps/math/src/index.ts"],
      "@worksheets/apps/sys": ["libs/apps/sys/src/index.ts"],
      "@worksheets/auth/client": ["libs/auth/client/src/index.ts"],
      "@worksheets/auth/server": ["libs/auth/server/src/index.ts"],
      "@worksheets/engine": ["libs/engine/src/index.ts"],
      "@worksheets/firebase/client": ["libs/firebase/client/src/index.ts"],
      "@worksheets/firebase/firestore": [
        "libs/firebase/firestore/src/index.ts"
      ],
      "@worksheets/firebase/pubsub": ["libs/firebase/pubsub/src/index.ts"],
      "@worksheets/firebase/server": ["libs/firebase/server/src/index.ts"],
      "@worksheets/templates": ["libs/templates/src/index.ts"],
      "@worksheets/ui/common": ["libs/ui/common/src/index.ts"],
      "@worksheets/ui/web-editor": ["libs/ui/web-editor/src/index.ts"],
      "@worksheets/ui/web-editor/server": ["libs/ui/web-editor/src/server.ts"],
      "@worksheets/util/data-structures": [
        "libs/util/data-structures/src/index.ts"
      ],
      "@worksheets/util/errors": ["libs/util/errors/src/index.ts"],
      "@worksheets/util/functional": ["libs/util/functional/src/index.ts"],
      "@worksheets/util/hardware": ["libs/util/hardware/src/index.ts"],
      "@worksheets/util/next": ["libs/util/next/src/index.ts"],
      "@worksheets/util/oauth/client": ["libs/util/oauth/client/src/index.ts"],
      "@worksheets/util/strings": ["libs/util/strings/src/index.ts"],
      "@worksheets/util/time": ["libs/util/time/src/index.ts"],
      "@worksheets/util/types": ["libs/util/types/src/index.ts"]
