{
  "name": "charity",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/charity",
  "projectType": "application",
  "implicitDependencies": ["assets-common"],
  "targets": {
    "build": {
      "executor": "@nx/next:build",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "root": "apps/charity",
        "outputPath": "dist/apps/charity",
        "assets": [
          {
            "input": "libs/assets/common/src/lib",
            "glob": "**/*",
            "output": "common"
          },
          {
            "input": "libs/assets/games/src/lib",
            "glob": "**/*",
            "output": "games"
          },
          {
            "input": "libs/assets/blog/src/lib",
            "glob": "**/*",
            "output": "blog"
          },
          {
            "input": "libs/assets/partners/src/lib",
            "glob": "**/*",
            "output": "partners"
          },
          {
            "input": "_articles",
            "glob": "**/*",
            "output": "articles"
          }
        ]
      },
      "configurations": {
        "development": {
          "outputPath": "apps/charity"
        },
        "production": {}
      }
    },
    "serve": {
      "executor": "@nx/next:server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "charity:build",
        "dev": true
      },
      "configurations": {
        "development": {
          "port": 6969,
          "buildTarget": "charity:build:development",
          "dev": true
        },
        "production": {
          "buildTarget": "charity:build:production",
          "dev": false
        }
      }
    },
    "export": {
      "executor": "@nx/next:export",
      "options": {
        "buildTarget": "charity:build:production"
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "apps/charity/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/charity/**/*.{ts,tsx,js,jsx}"]
      }
    }
  },
  "tags": []
}
