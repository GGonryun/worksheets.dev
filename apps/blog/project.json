{
  "name": "blog",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/blog",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nx/next:build",
      "outputs": [
        "{options.outputPath}"
      ],
      "defaultConfiguration": "production",
      "options": {
        "root": "apps/blog",
        "outputPath": "dist/apps/blog",
        "assets": [
          {
            "input": "libs/assets/common/src/lib",
            "glob": "**/*",
            "output": "common"
          },
          {
            "input": "libs/assets/icons/src/lib",
            "glob": "**/*",
            "output": "icons"
          },
          {
            "input": "libs/assets/blog/src/lib",
            "glob": "**/*",
            "output": "blog"
          },
          {
            "input": "_articles",
            "glob": "**/*",
            "output": "articles"
          }
        ]
      },
      "configurations": {
        "development": {
          "outputPath": "apps/blog"
        },
        "production": {}
      }
    },
    "serve": {
      "executor": "@nx/next:server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "blog:build",
        "dev": true
      },
      "configurations": {
        "development": {
          "port": 42069,
          "buildTarget": "blog:build:development",
          "dev": true
        },
        "production": {
          "buildTarget": "blog:build:production",
          "dev": false
        }
      }
    },
    "export": {
      "executor": "@nx/next:export",
      "options": {
        "buildTarget": "blog:build:production"
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": [
        "{workspaceRoot}/coverage/{projectRoot}"
      ],
      "options": {
        "jestConfig": "apps/blog/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": [
        "{options.outputFile}"
      ],
      "options": {
        "lintFilePatterns": [
          "apps/blog/**/*.{ts,tsx,js,jsx}"
        ]
      }
    }
  },
  "tags": []
}