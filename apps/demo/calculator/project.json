{
  "name": "demo-calculator",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/demo/calculator",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nx/next:build",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "root": "apps/demo/calculator",
        "outputPath": "dist/apps/demo/calculator"
      },
      "configurations": {
        "development": {
          "outputPath": "apps/demo/calculator"
        },
        "production": {}
      }
    },
    "serve": {
      "executor": "@nx/next:server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "demo-calculator:build",
        "dev": true
      },
      "configurations": {
        "development": {
          "port": 8401,
          "buildTarget": "demo-calculator:build:development",
          "dev": true
        },
        "production": {
          "buildTarget": "demo-calculator:build:production",
          "dev": false
        }
      }
    },
    "export": {
      "executor": "@nx/next:export",
      "options": {
        "buildTarget": "demo-calculator:build:production"
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "apps/demo/calculator/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/demo/calculator/**/*.{ts,tsx,js,jsx}"]
      }
    }
  },
  "tags": []
}
